<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/textView7"
    android:layout_toStartOf="@+id/textView7" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mds.mac.hellochandigarh.Activity4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1 STAR"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hotel Sunbeam"
            android:layout_marginTop="25dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/imageButton8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Set 9 km from the Chandigarh Railway Station and 10 km from the airport, this luxury hotel is 6 km from upscale shopping at Elante Mall.

Airy, streamlined rooms have wood floors and mood lighting. They come with free Wi-Fi, flat-screen TVs and minifridges. They also have desks, plus tea and coffeemaking equipment. Room service is available.

There's an international restaurant, as well as an elegant bar with nightly live entertainment and a 24-hour coffee shop. It offers an airport shuttle (fee), as well as a business center. Parking is free."
            android:id="@+id/textView8"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Phone:0172 450 5050"
            android:id="@+id/textView10"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:background="#fdffe5"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address: UDYOG PATH, SECTOR 22-B, Sco - 1058-1061, Chandigarh, 160022"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:background="#fdffe5" />



        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageButton8"
            android:src="@drawable/sunbeam"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/ib6"
            android:layout_marginTop="840dp"
            android:src="@drawable/directions"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

    </RelativeLayout>

</ScrollView>
