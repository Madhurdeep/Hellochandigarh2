<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/textView7"
    android:layout_toStartOf="@+id/textView7" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mds.mac.hellochandigarh.Activity4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2 STAR"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Western Court Chandigarh"
            android:layout_marginTop="25dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/imageButton8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Western Court a European style Boutique Hotel is 7kms from Railway Station, 3kms from ISBT Sector 17 and 1.1/2kms from ISBT Sector 43-B. This eco-friendly hotel is the flagship star property of the fast upcoming chain of hotels at Chandigarh, Panchkula and Gurgaon. Western truly personifies the word-LUXURY in its true sense offering unparallel comfort and unmatched hospitality with most personalised services."
            android:id="@+id/textView8"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Phone:0172 455 4455"
            android:id="@+id/textView10"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:background="#fdffe5"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address: SCO 103-106, Sector 43-B, Chandigarh, 160022"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:background="#fdffe5" />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/imageButton8"
            android:src="@drawable/west"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/ib7"
            android:layout_marginTop="850dp"
            android:src="@drawable/directions"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

    </RelativeLayout>

</ScrollView>
