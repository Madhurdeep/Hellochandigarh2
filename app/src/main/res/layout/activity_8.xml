<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/textView7"
    android:layout_toStartOf="@+id/textView7" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mds.mac.hellochandigarh.Activity4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4 STAR"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Park Plaza Chandigarh"
            android:layout_marginTop="25dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/imageButton8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Located in the Indian city of Chandigarh is the four star Park Plaza Hotel. The hotel is situated 7 km from the city centre and attractions close to the hotel include the Nek Chand Fantasy Rock Garden and the Rose Garden of Chandigarh. The 138 guest rooms and suites at the hotel all feature standard amenities including 32 inch flat screen televisions, direct dial telephones, mini bars, tea and coffee making facilities, high speed internet access and individually controlled air-conditioning. The hotel has rooms for both disabled guests and for female travellers traveling on their own. The hotel has four restaurants for guests to choose from serving a variety of cuisine from all over the world. There is also a hotel bar which is modelled after a traditional 18th century British pub. Business facilities include a ballroom which can hold up to 500 people and three board rooms. A 24 hour business centre is available as well as secretarial services. For recreation the hotel has a fitness centre and a spa."
            android:id="@+id/textView8"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Phone:0172 660 0000"
            android:id="@+id/textView10"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:background="#fdffe5"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address: Block 10, Sector 17-A, Chandigarh, 160017"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:background="#fdffe5" />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            android:id="@+id/imageButton8"
            android:src="@drawable/park"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/ib5"
            android:layout_marginTop="1050dp"
            android:src="@drawable/directions"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

    </RelativeLayout>

</ScrollView>
