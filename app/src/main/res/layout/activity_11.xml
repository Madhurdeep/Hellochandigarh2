<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/textView7"
    android:layout_toStartOf="@+id/textView7" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mds.mac.hellochandigarh.Activity4">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2 STAR"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The Aroma"
            android:layout_marginTop="25dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/imageButton8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Set 4 km from Elante Mall, this casual hotel is also 6 km from Sukhna Lake and 7 km from Zakir Hussain Rose Garden.

Cosy rooms feature flat-screen TVs, free Wi-Fi, desks and private bathrooms. Suites add separate living areas with sofas.

Buffet breakfast is complimentary; there's also an elegant restaurant/bar, a multi-cuisine restaurant and a 24-hour coffee shop. Banquet and meeting space are also available.
"
            android:id="@+id/textView8"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Phone:0172 401 0027"
            android:id="@+id/textView10"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:background="#fdffe5"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="90dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address: Aroma Twin Hotel Complex, Himalaya Marg, 22C, Sector 22, Chandigarh, 160022"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:textColor="#0084ff"
            android:textIsSelectable="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:background="#fdffe5" />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/imageButton8"
            android:src="@drawable/aroma"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/ib8"
            android:layout_marginTop="950dp"
            android:src="@drawable/directions"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" />

    </RelativeLayout>

</ScrollView>
